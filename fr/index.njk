---

<!-- HERO SLIDER full-bleed -->
<section class="hero hero-slider full-bleed">
  <div class="slide" style="background-image:url('/images/hero.webp')"></div>
  <div class="slide" style="background-image:url('/images/hero-2.webp')"></div>
  <div class="slide" style="background-image:url('/images/hero-3.webp')"></div>
  <div class="overlay" aria-hidden="true"></div>

  <div class="inner container">
    <div>
      <p class="kicker">Fustiñana · Navarra</p>
      <h1 class="font-primary">Casa Rural Bardena Negra</h1>
      <p style="color:#fff;opacity:.95;max-width:60ch;margin-top:.5rem">
        Casa rural completa para familias y amigos, a un paso de las <strong>Bardenas Reales</strong>, <strong>Tudela</strong> y <strong>Sendaviva</strong>.
      </p>
      <div class="actions">
        <a href="/reservas/" class="btn">Solicitar reserva</a>
        <a href="{{ site.bookingHref }}" target="_blank" rel="noopener" class="btn alt">Reservar en Rurive</a>
      </div>
    </div>
  </div>
</section>

<!-- BADGES -->
