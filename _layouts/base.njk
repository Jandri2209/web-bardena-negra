  <script>
  /* ===== Lightbox JS (ligero) ===== */
  (function(){
    const overlay = document.getElementById('lightbox');
    const img = document.getElementById('lbImg');
    const cap = document.getElementById('lbCap');
    const prevBtn = overlay.querySelector('.lb-prev');
    const nextBtn = overlay.querySelector('.lb-next');
    const closeBtn = overlay.querySelector('.lb-close');

    let items = [];  // {href, caption, el}
    let idx = 0;

    function collectGroup(groupName){
      const links = Array.from(document.querySelectorAll('a.lb[data-group="'+groupName+'"]'));
      return links.map(a => ({ href:a.getAttribute('href'), caption:a.dataset.caption||'', el:a }));
    }
    function collectVisible(){ // todas las categorías visibles (modo "Todas")
      const grids = Array.from(document.querySelectorAll('.gallery-grid'))
        .filter(g => getComputedStyle(g).display !== 'none');
      const links = grids.flatMap(g => Array.from(g.querySelectorAll('a.lb')));
      return links.map(a => ({ href:a.getAttribute('href'), caption:a.dataset.caption||'', el:a }));
    }

    function openAt(i){
      idx = i;
      const it = items[idx];
      img.src = it.href; img.alt = it.caption || ''; cap.textContent = it.caption || '';
      overlay.classList.add('open'); overlay.removeAttribute('aria-hidden');
      document.body.style.overflow = 'hidden';
    }
    function close(){
      overlay.classList.remove('open'); overlay.setAttribute('aria-hidden','true');
      document.body.style.overflow = ''; img.src = '';
    }
    function next(){ if(items.length){ openAt((idx+1)%items.length); } }
    function prev(){ if(items.length){ openAt((idx-1+items.length)%items.length); } }

    // Delegación: clic en cualquier <a class="lb">
    document.addEventListener('click', function(e){
      const a = e.target.closest('a.lb'); if(!a) return;
      e.preventDefault();

      const scope = document.body.dataset.lbScope || 'group'; // 'all' o 'group'
      if (scope === 'all') {
        items = collectVisible();
      } else {
        const group = a.dataset.group || 'default';
        items = collectGroup(group);
      }
      const i = items.findIndex(it => it.el === a);
      openAt(Math.max(0, i));
    });

    overlay.addEventListener('click', (e)=>{ if(e.target === overlay) close(); });
    closeBtn.addEventListener('click', close);
    nextBtn.addEventListener('click', next);
    prevBtn.addEventListener('click', prev);

    document.addEventListener('keydown', (e)=>{
      if(!overlay.classList.contains('open')) return;
      if(e.key === 'Escape') close();
      if(e.key === 'ArrowRight') next();
      if(e.key === 'ArrowLeft') prev();
    }, true);
  })();
  </script>
  <script>
    // Submenú "La Casa" (clic en caret en móvil, hover ya lo hace el CSS en desktop)
    (function(){
      const toggles = document.querySelectorAll('.sub-toggle');

      function closeAll(){
        document.querySelectorAll('.has-submenu.sub-open').forEach(item=>{
          item.classList.remove('sub-open');
          const btn = item.querySelector('.sub-toggle');
          btn && btn.setAttribute('aria-expanded','false');
        });
      }

      toggles.forEach(btn=>{
        const item = btn.closest('.has-submenu');
        btn.addEventListener('click', (e)=>{
          e.preventDefault();
          const open = item.classList.toggle('sub-open');
          btn.setAttribute('aria-expanded', open ? 'true' : 'false');
        });
        item.addEventListener('keyup', (e)=>{
          if(e.key === 'Escape'){ item.classList.remove('sub-open'); btn.setAttribute('aria-expanded','false'); btn.blur(); }
        });
      });

      // Cierra al hacer click fuera
      document.addEventListener('click', (e)=>{
        const anyOpen = document.querySelector('.has-submenu.sub-open');
        if (!anyOpen) return;
        if (!anyOpen.contains(e.target)) closeAll();
      });
    })();
  </script>
  <script>
    (function(){
      const item = document.querySelector('.has-submenu');
      if(!item) return;

      const mqDesktop = window.matchMedia('(min-width: 961px)');
      let leaveTimer = null;

      function open(){ item.classList.add('sub-open'); }
      function close(){ item.classList.remove('sub-open'); }

      // Sólo aplicamos la lógica de retardo en escritorio
      function bindDesktopHover(){
        item.addEventListener('mouseenter', () => {
          clearTimeout(leaveTimer);
          open();
        });
        item.addEventListener('mouseleave', () => {
          clearTimeout(leaveTimer);
          leaveTimer = setTimeout(close, 180);  // <-- ajusta el retardo aquí (ms)
        });
      }

      if (mqDesktop.matches) bindDesktopHover();
      mqDesktop.addEventListener?.('change', e => {
        // Resetea al cambiar de breakpoint
        clearTimeout(leaveTimer);
        close();
        if (e.matches) bindDesktopHover();
      });
    })();
  </script>
